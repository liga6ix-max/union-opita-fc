
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAnyManager() {
        return isSignedIn() && getUserData().role in ['admin', 'manager'];
    }
    
    function isAnyCoach() {
        return isSignedIn() && getUserData().role in ['admin', 'manager', 'coach'];
    }

    function isAthlete() {
        return isSignedIn() && getUserData().role == 'athlete';
    }


    // --------------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------------

    // CLUBS
    match /clubs/{clubId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAnyManager();
    }

    // USERS
    match /users/{userId} {
      allow get, list: if isAnyManager() || isOwner(userId);
      allow create: if true;
      allow update: if isAnyManager() || isOwner(userId);
      allow delete: if isAnyManager();
    }
    
    // Generic Subcollection Rule
    // This rule applies to athletes, payments, tasks, etc.
    // It allows any authenticated user to read, which is safe because
    // the application code filters data for the current user.
    // Write access is restricted to managers.
    match /clubs/{clubId}/{collection}/{docId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isAnyManager();
    }

    // Override for specific write permissions
    match /clubs/{clubId}/athletes/{athleteId} {
        // Allow a user to create and update their own athlete profile data.
        allow create, update: if isAnyManager() || isOwner(athleteId);
    }
    
    match /clubs/{clubId}/payments/{paymentId} {
        // Allow an athlete to update their own payment record (e.g., to add a reference number).
        allow update: if isAnyManager() || (isAthlete() && resource.data.athleteId == request.auth.uid);
    }

    match /clubs/{clubId}/tasks/{taskId} {
       // Allow the assignee, assigner, or a manager to update a task.
      allow update: if isAnyManager() || isOwner(resource.data.assigneeId) || isOwner(resource.data.assignerId);
    }
  }
}
