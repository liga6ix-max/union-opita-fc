
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserDoc(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }

    function isManager() {
      let userDoc = getUserDoc(request.auth.uid);
      return isSignedIn() && userDoc != null && userDoc.data.role == 'manager';
    }

    function isCoach() {
      let userDoc = getUserDoc(request.auth.uid);
      return isSignedIn() && userDoc != null && userDoc.data.role in ['manager', 'coach'];
    }

    function isCoachAndTargetIsAthleteInSameClub(userId) {
      // Check if the requester is a coach
      if (!isCoach()) {
        return false;
      }
      
      // Get both user documents
      let coachUserDoc = getUserDoc(request.auth.uid);
      let targetUserDoc = getUserDoc(userId);

      // Check if both documents exist
      if (coachUserDoc == null || targetUserDoc == null) {
        return false;
      }
      
      // Check if both users are in the same club and the target is an athlete
      return coachUserDoc.data.clubId == targetUserDoc.data.clubId && targetUserDoc.data.role == 'athlete';
    }

    function isAthlete() {
      let userDoc = getUserDoc(request.auth.uid);
      return isSignedIn() && userDoc != null && userDoc.data.role == 'athlete';
    }
    
    function isUnifitMember() {
      let userDoc = getUserDoc(request.auth.uid);
      return isSignedIn() && userDoc != null && userDoc.data.role == 'unifit';
    }

    function isMemberOfTheClub(clubId) {
      let userDoc = getUserDoc(request.auth.uid);
      // Check if the user document exists and has the corresponding clubId.
      return isSignedIn() && userDoc != null && ('clubId' in userDoc.data) && userDoc.data.clubId == clubId;
    }
    
    function isCoachInSameClub(targetUserId) {
      // Check if the requester is a coach
      if (!isCoach()) {
        return false;
      }
      
      // Get both user documents
      let coachUserDoc = getUserDoc(request.auth.uid);
      let targetUserDoc = getUserDoc(targetUserId);

      // Check if both documents exist
      if (coachUserDoc == null || targetUserDoc == null) {
        return false;
      }
      
      // Check if both users are in the same club
      return coachUserDoc.data.clubId == targetUserDoc.data.clubId;
    }

    // --------------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------------

    // CLUBS
    match /clubs/{clubId} {
      // Any authenticated member of the club can read club details.
      // Managers can read any club document, essential for settings.
      allow read: if isManager() || (isSignedIn() && isMemberOfTheClub(clubId));
      // Only managers can create, update, or delete club documents.
      allow write: if isManager();
    }

    // USERS
    match /users/{userId} {
      // Allow reading a single user doc if signed in (for role checks).
      allow get: if isSignedIn();
      // Allow listing users only for coaches and managers (for admin panels).
      allow list: if isCoach();
      
      // Anyone can create a user account (e.g., during sign-up).
      allow create: if true;
      
      // Managers can update any user. Users can update their own profile. Coaches can update athletes in their club.
      allow update: if isManager() || isOwner(userId) || isCoachAndTargetIsAthleteInSameClub(userId);
      
      // Only managers can delete users.
      allow delete: if isManager();
    }
    
    // UNIFIT
    match /clubs/{clubId}/unifitMembers/{userId} {
      allow read: if isOwner(userId) || isCoachInSameClub(userId) || isManager();
      allow write: if isCoachInSameClub(userId) || isManager();
    }

    match /clubs/{clubId}/unifitMembers/{userId}/measurements/{measurementId} {
      allow read: if isOwner(userId) || isCoachInSameClub(userId) || isManager();
      allow create: if isCoachInSameClub(userId) || isManager();
      allow update, delete: if isManager(); // Only managers can edit/delete history
    }

    match /clubs/{clubId}/unifitBookings/{bookingId} {
      allow read: if isMemberOfTheClub(clubId);
      allow create: if isUnifitMember() && request.resource.data.userId == request.auth.uid;
      allow delete: if isManager() || (isUnifitMember() && resource.data.userId == request.auth.uid);
      allow update: if false;
    }
    
    // Underwater Activities
    match /clubs/{clubId}/underwaterActivities/{activityId} {
      allow read, write: if isCoach() && isMemberOfTheClub(clubId);
    }
    
    // Subcollections need to verify the user is part of the parent club OR is a manager.
    match /clubs/{clubId}/{document=**} {
        allow read, write: if isManager() || (isSignedIn() && isMemberOfTheClub(clubId));
    }
  }
}
