
{
  "entities": {
    "Club": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Club",
      "type": "object",
      "description": "Represents the club entity with its main details, settings, and configurations.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Club entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the club."
        },
        "nit": {
          "type": "string",
          "description": "The NIT (Tax Identification Number) of the club."
        },
        "bankAccount": {
          "type": "object",
          "description": "Bank account details for receiving payments.",
          "properties": {
            "bankName": { "type": "string" },
            "accountType": { "type": "string" },
            "accountNumber": { "type": "string" },
            "accountHolder": { "type": "string" }
          }
        },
        "monthlyFees": {
          "type": "object",
          "description": "Fee structure per category.",
          "additionalProperties": { "type": "number" }
        },
        "categories": {
          "type": "array",
          "description": "List of age categories in the club.",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "minYear": { "type": "number" },
              "maxYear": { "type": "number" }
            }
          }
        },
        "coachAssignments": {
          "type": "object",
          "description": "Mapping of team names to assigned coach user IDs.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "trainingSchedules": {
          "type": "object",
          "description": "Training schedules for each category, mapping safe category keys to an array of schedule items.",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "day": {
                  "type": "string",
                  "description": "Day of the week (e.g., 'Lunes')."
                },
                "time": {
                  "type": "string",
                  "description": "Training time (e.g., '4:00 PM - 6:00 PM')."
                },
                "location": {
                  "type": "string",
                  "description": "Training location (e.g., 'Cancha Principal')."
                }
              },
              "required": [
                "day",
                "time",
                "location"
              ]
            }
          }
        },
        "unifitSchedule": {
          "type": "array",
          "description": "Training schedule for the UNIFIT program.",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string"
              },
              "time": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "activity": {
                "type": "string"
              }
            },
            "required": [
              "day",
              "time",
              "location",
              "activity"
            ]
          }
        }
      },
      "required": [
        "id",
        "name",
        "nit"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the application, with different roles (admin, manager, coach, athlete).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "clubId": {
          "type": "string",
          "description": "Reference to Club. (Relationship: Club 1:N User)"
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The role of the user (admin, manager, coach, athlete, unifit).",
          "enum": ["admin", "manager", "coach", "athlete", "unifit"]
        },
        "disabled": {
            "type": "boolean",
            "description": "Indicates if the user's account is disabled."
        },
        "salary": {
            "type": "number",
            "description": "The monthly salary of the user, applicable to coaches and managers."
        }
      },
      "required": [
        "id",
        "clubId",
        "firstName",
        "lastName",
        "email",
        "role",
        "disabled"
      ]
    },
    "Athlete": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Athlete",
      "type": "object",
      "description": "Represents an athlete associated with the club.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Athlete entity."
        },
        "clubId": {
          "type": "string",
          "description": "Reference to Club. (Relationship: Club 1:N Athlete)"
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:1 Athlete)"
        },
        "emergencyContactName": {
          "type": "string",
          "description": "Name of the emergency contact."
        },
        "emergencyContactPhone": {
          "type": "string",
          "description": "Phone number of the emergency contact."
        },
        "medicalInformation": {
          "type": "string",
          "description": "Important medical information about the athlete."
        },
        "weight": {
          "type": "number",
          "description": "Peso del atleta en kilogramos."
        },
        "height": {
          "type": "number",
          "description": "Estatura del atleta en centímetros."
        },
        "vo2max": {
          "type": "number",
          "description": "Consumo máximo de oxígeno, medido en niveles de 1 a 30."
        },
        "jumpHeight": {
          "type": "number",
          "description": "Altura del salto vertical, medido en centímetros."
        },
        "speedTest30mTime": {
          "type": "number",
          "description": "Tiempo en segundos en el test de velocidad de 30 metros."
        },
        "ankleFlexibility": {
          "type": "number",
          "description": "Flexibilidad del tobillo, medida en centímetros."
        },
        "enduranceTest8kmTime": {
          "type": "string",
          "description": "Tiempo en la prueba de resistencia de 8km (formato HH:mm:ss)."
        }
      },
      "required": [
        "id",
        "clubId",
        "userId",
        "emergencyContactName",
        "emergencyContactPhone"
      ]
    },
    "UnifitMember": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UnifitMember",
      "type": "object",
      "description": "Represents a member of the Unifit program.",
      "properties": {
        "id": {
          "type": "string",
          "description": "User ID, same as the user this profile belongs to."
        },
        "clubId": {
          "type": "string"
        },
        "coachId": {
          "type": "string",
          "description": "ID of the assigned Unifit coach."
        },
        "level": {
          "type": "number",
          "description": "Member's skill level from 1 to 12."
        }
      },
      "required": [
        "id",
        "clubId"
      ]
    },
    "UnifitMeasurement": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UnifitMeasurement",
      "type": "object",
      "description": "A single set of body measurements taken at a specific date.",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "weight": {
          "type": "number",
          "description": "Weight in kg."
        },
        "height": {
          "type": "number",
          "description": "Height in cm."
        },
        "bodyFatPercentage": {
          "type": "number",
          "description": "Body fat percentage."
        },
        "chest": {
          "type": "number",
          "description": "Chest measurement in cm."
        },
        "shoulders": {
          "type": "number",
          "description": "Shoulders measurement in cm."
        },
        "back": {
          "type": "number",
          "description": "Back measurement in cm."
        },
        "waist": {
          "type": "number",
          "description": "Waist measurement in cm."
        },
        "hip": {
          "type": "number",
          "description": "Hip measurement in cm."
        },
        "armRight": {
          "type": "number",
          "description": "Right arm measurement in cm."
        },
        "armLeft": {
          "type": "number",
          "description": "Left arm measurement in cm."
        },
        "legRight": {
          "type": "number",
          "description": "Right leg measurement in cm."
        },
        "legLeft": {
          "type": "number",
          "description": "Left leg measurement in cm."
        },
        "calfRight": {
          "type": "number",
          "description": "Right calf measurement in cm."
        },
        "calfLeft": {
          "type": "number",
          "description": "Left calf measurement in cm."
        }
      },
      "required": [
        "id",
        "date"
      ]
    },
    "UnifitBooking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UnifitBooking",
      "type": "object",
      "description": "Represents a user's booking for a specific UNIFIT session on a specific date.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "userId": { "type": "string", "description": "The ID of the user who made the booking." },
        "bookingDate": { "type": "string", "format": "date", "description": "The date for which the session is booked (e.g., '2024-08-20')." },
        "sessionId": { "type": "string", "description": "A unique identifier for the weekly session slot. E.g., 'Lunes-6-7_AM-Gimnasio_Principal'." }
      },
      "required": ["id", "clubId", "userId", "bookingDate", "sessionId"]
    },
    "Payment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Payment",
      "type": "object",
      "description": "Represents a payment made by an athlete.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Payment entity."
        },
        "clubId": {
          "type": "string",
          "description": "Reference to Club. (Relationship: Club 1:N Payment)"
        },
        "athleteId": {
          "type": "string",
          "description": "Reference to Athlete. (Relationship: Athlete 1:N Payment)"
        },
        "paymentDate": {
          "type": "string",
          "description": "The date when the payment was made.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "The amount paid."
        }
      },
      "required": [
        "id",
        "clubId",
        "athleteId",
        "paymentDate",
        "amount"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task assigned to a coach or staff member.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Task entity."
        },
        "clubId": {
          "type": "string",
          "description": "Reference to Club. (Relationship: Club 1:N Task)"
        },
        "assignerId": {
          "type": "string",
          "description": "Reference to User who assigned the task. (Relationship: User 1:N Task (assigned))"
        },
        "assigneeId": {
          "type": "string",
          "description": "Reference to User who is assigned to the task. (Relationship: User 1:N Task (assignee))"
        },
        "description": {
          "type": "string",
          "description": "Description of the task."
        },
        "dueDate": {
          "type": "string",
          "description": "The date when the task is due.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "The status of the task (e.g., Open, In Progress, Completed)."
        }
      },
      "required": [
        "id",
        "clubId",
        "assignerId",
        "assigneeId",
        "description",
        "dueDate",
        "status"
      ]
    },
    "LandingPageContent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "LandingPageContent",
      "type": "object",
      "description": "Represents the content displayed on the landing page.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the LandingPageContent entity."
        },
        "clubId": {
          "type": "string",
          "description": "Reference to Club. (Relationship: Club 1:N LandingPageContent)"
        },
        "title": {
          "type": "string",
          "description": "The title of the landing page section."
        },
        "content": {
          "type": "string",
          "description": "The main content of the landing page section (e.g., information about inscriptions, events)."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image associated with the content.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "clubId",
        "title",
        "content"
      ]
    },
    "Evaluation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Evaluation",
      "type": "object",
      "description": "Represents a psychological or performance evaluation template.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "categories": { "type": "array", "items": { "type": "string" } },
        "expiryDate": { "type": "string", "format": "date-time" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" }
            },
            "required": ["text"]
          }
        }
      },
      "required": ["id", "clubId", "title", "categories", "expiryDate", "questions"]
    },
    "EvaluationResponse": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "EvaluationResponse",
      "type": "object",
      "description": "Represents an athlete's response to an evaluation.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "evaluationId": { "type": "string" },
        "athleteId": { "type": "string" },
        "submittedAt": { "type": "string", "format": "date-time" },
        "responses": {
          "type": "object",
          "description": "Key-value pairs of question index and response value.",
          "additionalProperties": { "type": "string" }
        }
      },
      "required": ["id", "clubId", "evaluationId", "athleteId", "submittedAt", "responses"]
    },
    "Match": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Match",
      "type": "object",
      "description": "Represents a scheduled match or game.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "categories": { "type": "array", "items": { "type": "string" } },
        "matchDate": { "type": "string", "format": "date" },
        "matchTime": { "type": "string", "format": "time" },
        "attendanceTime": { "type": "string", "format": "time" },
        "location": { "type": "string" },
        "isVisitor": { "type": "boolean" },
        "departureTime": { "type": "string", "format": "time", "description": "Applicable if isVisitor is true." },
        "opponent": { "type": "string" },
        "arbitrationValue": { "type": "number" },
        "modality": { "type": "string", "enum": ["Futbol 11", "Futbol 9", "Futbol 7", "Futbol 5"] },
        "gameStructure": { "type": "string", "description": "e.g., 1-4-2-3-1" },
        "gameIdea": { "type": "string" },
        "gameModel": { "type": "string" },
        "calledPlayers": { "type": "array", "items": { "type": "string" }, "description": "List of athlete IDs." }
      },
      "required": ["id", "clubId", "categories", "matchDate", "matchTime", "attendanceTime", "location", "opponent", "modality"]
    },
    "Attendance": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Attendance",
      "type": "object",
      "description": "Represents an athlete's attendance confirmation for a match.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "matchId": { "type": "string" },
        "athleteId": { "type": "string" },
        "status": { "type": "string", "enum": ["Confirmado", "Rechazado"] },
        "submittedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "clubId", "matchId", "athleteId", "status", "submittedAt"]
    },
    "TrainingPlan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TrainingPlan",
      "type": "object",
      "description": "Represents a complete, multi-week training plan (mesocycle) generated by the AI.",
      "properties": {
        "id": { "type": "string" },
        "clubId": { "type": "string" },
        "mesocycleObjective": { "type": "string" },
        "team": { "type": "string", "description": "The team/category this plan is assigned to." },
        "coachId": { "type": "string", "description": "The ID of the coach this plan is assigned to." },
        "methodology": { "type": "string", "enum": ["tecnificacion", "futbol_medida", "periodizacion_tactica", "unifit"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "microcycles": {
          "type": "array",
          "description": "An array of weekly plans (microcycles).",
          "items": {
            "type": "object",
            "properties": {
              "week": { "type": "string" },
              "mainObjective": { "type": "string" },
              "sessions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "day": { "type": "string" },
                    "focus": { "type": "string" },
                    "duration": { "type": "number" },
                    "activities": { "type": "string" },
                    "fieldDimensions": { "type": "string" },
                    "recoveryTime": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "required": ["id", "clubId", "mesocycleObjective", "team", "coachId", "methodology", "createdAt", "microcycles"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/clubs/{clubId}",
        "definition": {
          "entityName": "Club",
          "schema": {
            "$ref": "#/backend/entities/Club"
          },
          "description": "Stores club details.  `clubId` is used as the document ID.",
          "params": [
            {
              "name": "clubId",
              "description": "The unique identifier for the club."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user details. `userId` is used as the document ID.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/athletes/{athleteId}",
        "definition": {
          "entityName": "Athlete",
          "schema": {
            "$ref": "#/backend/entities/Athlete"
          },
          "description": "Stores athlete information related to a specific club. Includes denormalized 'clubId' for authorization independence.",
          "params": [
            {
              "name": "clubId",
              "description": "The unique identifier for the club."
            },
            {
              "name": "athleteId",
              "description": "The unique identifier for the athlete."
            }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/unifitMembers/{userId}",
        "definition": {
          "entityName": "UnifitMember",
          "schema": {
            "$ref": "#/backend/entities/UnifitMember"
          },
          "description": "Stores Unifit program member details, like their assigned coach.",
          "params": [
            {
              "name": "clubId"
            },
            {
              "name": "userId"
            }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/unifitMembers/{userId}/measurements/{measurementId}",
        "definition": {
          "entityName": "UnifitMeasurement",
          "schema": {
            "$ref": "#/backend/entities/UnifitMeasurement"
          },
          "description": "Stores historical body measurements for a Unifit member.",
          "params": [
            {
              "name": "clubId"
            },
            {
              "name": "userId"
            },
            {
              "name": "measurementId"
            }
          ]
        }
      },
       {
        "path": "/clubs/{clubId}/unifitBookings/{bookingId}",
        "definition": {
          "entityName": "UnifitBooking",
          "schema": {
            "$ref": "#/backend/entities/UnifitBooking"
          },
          "description": "Stores all user bookings for UNIFIT sessions.",
          "params": [
            { "name": "clubId" },
            { "name": "bookingId" }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/payments/{paymentId}",
        "definition": {
          "entityName": "Payment",
          "schema": {
            "$ref": "#/backend/entities/Payment"
          },
          "description": "Stores payment information for athletes within a specific club. Includes denormalized 'clubId' for authorization independence.",
          "params": [
            {
              "name": "clubId",
              "description": "The unique identifier for the club."
            },
            {
              "name": "paymentId",
              "description": "The unique identifier for the payment."
            }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Stores tasks assigned to coaches or staff within a club. Includes denormalized 'clubId' for authorization independence.",
          "params": [
            {
              "name": "clubId",
              "description": "The unique identifier for the club."
            },
            {
              "name": "taskId",
              "description": "The unique identifier for the task."
            }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/landingPageContent/{contentId}",
        "definition": {
          "entityName": "LandingPageContent",
          "schema": {
            "$ref": "#/backend/entities/LandingPageContent"
          },
          "description": "Stores landing page content specific to each club. Includes denormalized 'clubId' for authorization independence.",
          "params": [
            {
              "name": "clubId",
              "description": "The unique identifier for the club."
            },
            {
              "name": "contentId",
              "description": "The unique identifier for the landing page content."
            }
          ]
        }
      },
       {
        "path": "/clubs/{clubId}/evaluations/{evaluationId}",
        "definition": {
          "entityName": "Evaluation",
          "schema": {
            "$ref": "#/backend/entities/Evaluation"
          },
          "description": "Stores evaluation templates created by managers.",
          "params": [
            { "name": "clubId" },
            { "name": "evaluationId" }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/evaluationResponses/{responseId}",
        "definition": {
          "entityName": "EvaluationResponse",
          "schema": {
            "$ref": "#/backend/entities/EvaluationResponse"
          },
          "description": "Stores athlete responses to evaluations.",
          "params": [
            { "name": "clubId" },
            { "name": "responseId" }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/matches/{matchId}",
        "definition": {
          "entityName": "Match",
          "schema": {
            "$ref": "#/backend/entities/Match"
          },
          "description": "Stores match details for the club.",
          "params": [
            { "name": "clubId" },
            { "name": "matchId" }
          ]
        }
      },
      {
        "path": "/clubs/{clubId}/attendance/{attendanceId}",
        "definition": {
          "entityName": "Attendance",
